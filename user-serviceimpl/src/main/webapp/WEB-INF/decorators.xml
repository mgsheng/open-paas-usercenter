<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/jsp/decorators">

    <!--main decorator-->
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>

    <excludes>
        <pattern>/login.jsp</pattern>
        <pattern>/index.jsp</pattern>
        <pattern>/main*</pattern>
        <pattern>/findpwd*</pattern>
        <pattern>/index_images_detail*</pattern>
        <pattern>/dev*</pattern>
        <pattern>/login.jsp?authentication_error=1</pattern>
        <pattern>/user/*</pattern>
        <pattern>/oauth/*</pattern>
        <pattern>/legalnotice.jsp</pattern>
        <pattern>/login.jsp?appname=*</pattern>
    </excludes>

</decorators>